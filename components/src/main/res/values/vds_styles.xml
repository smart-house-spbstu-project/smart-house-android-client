<resources>

    <style name="VDS" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="VDS.Splash.V19" parent="VDS">

        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="VDS.Splash" parent="VDS.Splash.V19"/>

    <style name="VDS.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/vds_gray_outline</item>
    </style>

    <style name="VDS.TextAppearance.Medium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="VDS.TextAppearance.Regular">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="VDS.TextAppearance.P1.V19" parent="VDS.TextAppearance.Regular">
        <item name="android:textSize">@dimen/vds_tertia</item>
    </style>

    <style name="VDS.TextAppearance.P1" parent="VDS.TextAppearance.P1.V19" />

    <style name="VDS.TextAppearance.P2" parent="VDS.TextAppearance.P2.V19" />

    <style name="VDS.TextAppearance.P2.V19" parent="VDS.TextAppearance.Regular">
        <item name="android:textSize">@dimen/vds_mittel</item>
    </style>

    <style name="VDS.TextAppearance.P2.Medium" parent="VDS.TextAppearance.Medium">
        <item name="android:textSize">@dimen/vds_mittel</item>
    </style>

    <style name="VDS.TextAppearance.H1" parent="VDS.TextAppearance.Regular">
        <item name="android:textSize">@dimen/vds_double_tertia</item>
    </style>

    <style name="VDS.TextAppearance.H2" parent="VDS.TextAppearance.Regular">
        <item name="android:textSize">@dimen/vds_double_cicero</item>
    </style>

    <style name="VDS.TextAppearance.H3" parent="VDS.TextAppearance.Medium">
        <item name="android:textSize">@dimen/vds_double_corpus</item>
    </style>

    <style name="VDS.TextAppearance.H4" parent="VDS.TextAppearance.Medium">
        <item name="android:textSize">@dimen/vds_tertia</item>
    </style>

    <style name="VDS.TextAppearance.H5" parent="VDS.TextAppearance.Medium">
        <item name="android:textSize">@dimen/vds_mittel</item>
    </style>

    <style name="VDS.TextAppearance.H6" parent="VDS.TextAppearance.Regular">
        <item name="android:textSize">@dimen/vds_cicero</item>
    </style>

    <style name="VDS.TextAppearance.Button1" parent="VDS.TextAppearance.Medium">
        <item name="android:textSize">@dimen/vds_tertia</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="VDS.TextAppearance.Button4.V19" parent="VDS.TextAppearance.Regular">
        <item name="android:textSize">@dimen/vds_mittel</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="VDS.TextAppearance.Button4" parent="VDS.TextAppearance.Button4.V19" />

    <style name="VDS.TextAppearance.P2.Medium.Foggy">
        <item name="android:textColor">@color/vds_gray_outline</item>
        <item name="android:alpha">@dimen/vds_foggy_opacity</item>
    </style>

    <style name="VDS.TextAppearance.D2" parent="VDS.TextAppearance.Regular">
        <item name="android:textSize">@dimen/vds_corpus</item>
        <item name="android:textColor">@color/vds_gray_outline</item>
        <item name="android:alpha">@dimen/vds_foggy_opacity</item>
    </style>

    <style name="VDS.TextAppearance.D1" parent="VDS.TextAppearance.Regular">
        <item name="android:textSize">@dimen/vds_cicero</item>
        <item name="android:textColor">@color/vds_gray_outline</item>
        <item name="android:alpha">@dimen/vds_foggy_opacity</item>
    </style>

    <style name="VDS.TextAppearance.P2.Foggy">
        <item name="android:textColor">@color/vds_gray_outline</item>
        <item name="alpha">@dimen/vds_deep_opacity</item>
    </style>

    <style name="VDS.TextAppearance.Title" parent="VDS.TextAppearance.Regular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="VDS.TextAppearance.Subtext" parent="VDS.TextAppearance.Medium">
        <item name="android:textSize">@dimen/vds_subtext</item>
        <item name="android:textColor">@color/vds_white_full</item>
        <item name="android:alpha">@dimen/vds_foggy_opacity</item>
    </style>

    <style name="VDS.TextView" parent="TextAppearance.AppCompat" />

    <style name="VDS.TextView.P1">
        <item name="lineHeight">@dimen/vds_line_height_1</item>
    </style>

    <style name="VDS.TextView.P2">
        <item name="lineHeight">@dimen/vds_line_height_2</item>
    </style>

    <style name="VDS.TextInputLayout" />

    <style name="VDS.TextInputLayout.TextAppearance" parent="@style/VDS.TextAppearance.D1" />

    <style name="VDS.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/VDS.TextAppearance.P1</item>
        <item name="android:textColor">@color/vds_gray_outline</item>
    </style>

    <style name="VDS.ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/vds_list_item_height</item>
        <item name="android:paddingEnd">@dimen/vds_padding_16</item>
        <item name="android:paddingStart">@dimen/vds_padding_16</item>
        <item name="android:paddingTop">@dimen/vds_margin_14</item>
        <item name="android:paddingBottom">@dimen/vds_margin_14</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/vds_list_item_background</item>
        <item name="android:textAppearance">@style/VDS.TextAppearance.P1</item>
        <item name="android:textColor">@color/vds_gray_outline</item>
    </style>

    <style name="VDS.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/vds_default_button_height</item>
        <item name="android:textAppearance">@style/VDS.TextAppearance.Button4</item>
        <item name="lineHeight">@dimen/vds_line_height_2</item>
        <item name="android:textColor">@color/vds_white_full</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/vds_padding_16</item>
        <item name="android:paddingEnd">@dimen/vds_padding_16</item>
        <item name="android:background">@drawable/vds_enable_default_button_background</item>
    </style>

    <style name="VDS.Button.Outline">
        <item name="android:textAppearance">@style/VDS.TextAppearance.Button4</item>
        <item name="android:textColor">@drawable/vds_button_outline_text_color</item>
        <item name="android:background">@drawable/vds_button_outline_background</item>
    </style>

    <style name="VDS.PrimaryOutlineButton" parent="VDS.Button.Outline">
        <item name="android:layout_height">@dimen/vds_default_button_height</item>
        <item name="android:paddingLeft">@dimen/vds_padding_16</item>
        <item name="android:paddingRight">@dimen/vds_padding_16</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/vds_primary_outline_button_text_selector</item>
        <item name="android:background">@drawable/vds_primary_outline_button_selector</item>
    </style>

    <style name="VDS.AlertDialogText" parent="VDS.TextAppearance.P1">
        <item name="android:textColor">@color/vds_gray_outline</item>
        <item name="android:alpha">@dimen/vds_deep_opacity</item>
        <item name="android:lineSpacingExtra">@dimen/vds_alert_dialog_text_linespacing</item>
    </style>

    <style name="VDS.AlertDialogTitle" parent="VDS.TextAppearance.H3">
        <item name="android:textColor">@color/vds_gray_outline</item>
        <item name="android:lineSpacingExtra">@dimen/vds_alert_dialog_text_linespacing</item>
    </style>

    <style name="VDS.AlertDialogButton" parent="VDS.Button.Outline">
        <item name="android:textColor">@drawable/vds_dialog_btn_text_color</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/vds_padding_16</item>
        <item name="android:paddingRight">@dimen/vds_padding_16</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/vds_default_button_height</item>
    </style>

</resources>